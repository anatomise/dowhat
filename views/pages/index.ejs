<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>stay here got what - free things to do in sg</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        let map;
        let infoWindow;
    
        function initMap() {
            const mapOptions = {
                center: { lat: 1.365812063217163, lng: 103.81915283203125 },
                zoom: 13,
            };
    
            map = new google.maps.Map(document.getElementById("map"), mapOptions);
            infoWindow = new google.maps.InfoWindow();
    
            // get events 
            fetch("/events-data")
                .then(response => response.json())
                .then(events => {
                    setMarkers(events);
                })
                .catch(error => console.error("Error fetching events:", error));
        }
    
        function setMarkers(events) {
            events.forEach(event => {
                // get place details
                fetch(`/place-details?place_id=${event.googlePlaceId}`)
                    .then(response => response.json())
                    .then(placeDetails => {
                        const marker = new google.maps.Marker({
                            map: map,
                            position: placeDetails.result.geometry.location
                        });
    
                        google.maps.event.addListener(marker, 'click', function () {
                            infoWindow.setContent(`<b>${event.name}</b><br>${event.location}<br>${event.start} to ${event.end}<br>${event.tags.join(', ')}`);
                            infoWindow.open(map, marker);
                        });
                    })
                    .catch(error => console.error("Error fetching place details:", error));
            });
        }
    
        window.initMap = initMap;
    </script>
</head>

